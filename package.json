{
  "private": true,
  "name": "blog",
  "description": "A blog engine with remix.run",
  "license": "MIT",
  "scripts": {
    "push:db": "prisma db push",
    "prisma": "prisma studio",
    "migrate": "prisma migrate dev --name init",
    "build": "tailwindcss -i ./src/styles/index.css -o ./src/styles/dist.css -m && remix build; cp -r ./posts ./api; cp -r posts api/_build",
    "css": "tailwindcss -i ./src/styles/index.css -o ./src/styles/dist.css --watch",
    "config-json": "node config-builder",
    "predev": "npm run config-json",
    "prebuild": "npm run config-json",
    "dev": "concurrently 'yarn css' 'remix dev'",
    "postinstall": "remix setup node",
    "setup": "remix setup node",
    "start": "remix-serve api/_build"
  },
  "dependencies": {
    "@prisma/client": "4.1.1",
    "@radix-ui/react-switch": "1.0.0",
    "@remix-run/react": "1.6.6",
    "@remix-run/serve": "1.6.6",
    "@remix-run/vercel": "1.6.6",
    "prisma": "4.1.1",
    "react": "18.2.0",
    "react-collapse": "5.1.1",
    "react-dom": "18.2.0",
    "react-icons": "4.4.0",
    "react-markdown": "8.0.",
    "react-syntax-highlighter": "15.5.0",
    "rehype-document": "6.0.1",
    "rehype-format": "4.0.1",
    "rehype-parse": "8.0.4",
    "rehype-react": "7.0.4",
    "rehype-stringify": "9.0.3",
    "remark-breaks": "3.0.2",
    "remark-gfm": "3.0.1",
    "remark-parse": "10.0.1",
    "remark-rehype": "10.1.0",
    "remix": "1.6.6",
    "remix-auth": "3.2.2",
    "remix-auth-github": "1.1.1",
    "unified": "10.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.6.6",
    "@tailwindcss/forms": "0.5.2",
    "@tailwindcss/typography": "0.5.4",
    "@types/node": "18.6.2",
    "@types/react": "18.0.15",
    "@types/react-collapse": "5.0.1",
    "@types/react-dom": "18.0.6",
    "@types/react-syntax-highlighter": "15.5.4",
    "concurrently": "7.3.0",
    "dotenv": "16.0.1",
    "postcss": "8.4.14",
    "tailwindcss": "3.1.7",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": true
}
